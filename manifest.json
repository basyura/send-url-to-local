{
  "manifest_version": 3,
  "name": "Send URL to Local",
  "version": "1.0",
  "description": "現在開いているタブの URL をローカルの任意のポートに送信する Chrome 拡張機能。",
  "permissions": ["tabs", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Send URL to Local",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
